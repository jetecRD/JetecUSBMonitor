<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.RecordHistoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_view"
        android:elevation="5dp"
        app:buttonGravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_toolBarTitleSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jetec Co.,Ltd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20dp" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_RecordHistoryDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarSetting" />

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionActionButton_FilterByUUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#4CAF50"
            app:fab_colorPressed="#72A675"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_size="mini"
            app:fab_label="以產品編號顯示"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionActionButton_FilterByDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#D2481C"
            app:fab_colorPressed="#FD815A"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_size="mini"
            app:fab_label="以名稱顯示"
            />

    </com.github.clans.fab.FloatingActionMenu>
</androidx.constraintlayout.widget.ConstraintLayout>